<mvc:View
    controllerName="odatacrud.controller.View1"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page id="_IDGenPage1">
        <Table id="_IDGenTable1"
        growing="true"
		growingThreshold="10"
		items="{
		path: '/Funcionario'}">
            <columns>
                <Column id="_IDGenColumn1">
                    <Text
                        id="_IDGenText1"
                        text="ID"
                    />
                </Column>
            </columns>
            <columns>
                <Column id="_IDGenColumn2">
                    <Text
                        id="_IDGenText2"
                        text="Nome"
                    />
                </Column>
            </columns>
            <columns>
                <Column id="_IDGenColumn3">
                    <Text
                        id="_IDGenText3"
                        text="Genero"
                    />
                </Column>
            </columns>
            <columns>
                <Column id="_IDGenColumn4">
                    <Text
                        id="_IDGenText4"
                        text="Estado"
                    />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1">
                    <cells>
                        <Text
                            id="_IDGenTextID"
                            text="{ID}"
                        />
                    </cells>
                    <cells>
                        <Text
                            id="_IDGenTextNome"
                            text="{Nome}"
                        />
                    </cells>
                    <cells>
                        <Text
                            id="_IDGenTextGenero"
                            text="{Genero}"
                        />
                    </cells>
                    <cells>
                        <Text
                            id="_IDGenTextEstado"
                            text="{Estado}"
                        />
                    </cells>
                    
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
