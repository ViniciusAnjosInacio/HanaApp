<mvc:View
    controllerName="valefuncionarioscrud.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:semantic="sap.f.semantic"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <App
        id="_IDGenApp1"
        busy="{appView/busy}"
        class="sapUiSizeCompact"
    >
        <Page
            id="_IDGenPage1"
            title="{i18n>title}"
            class="customPageTitle"
        >
            <headerContent>
                <Button
                    id="resetChangesButton"
                    text="{i18n>resetChangesButtonText}"
                    enabled="{= !${appView>/hasUIChanges}}"
                    press=".onResetDataSource"
                    type="Emphasized"
                />
                <Button
                    id="_IDGenButton1"
                    icon="sap-icon://excel-attachment"
                    press=".onExport"
                />
            </headerContent>
            <content>
                <l:ResponsiveSplitter
                    id="_IDGenResponsiveSplitter1"
                    defaultPane="defaultPane"
                >
                    <l:PaneContainer
                        id="_IDGenPaneContainer1"
                        orientation="Horizontal"
                    >
                        <l:SplitPane id="defaultPane">
                            <l:layoutData>
                                <l:SplitterLayoutData
                                    id="defaultLayout"
                                    size="100%"
                                    resizable="false"
                                />
                            </l:layoutData>

                            <FlexBox
                                id="_IDGenFlexBox1"
                                justifyContent="Center"
                                alignItems="Center"
                                height="25%"
                            >
                                <items>
                                    <Image
                                        src="https://upload.wikimedia.org/wikipedia/pt/thumb/c/cc/Logotipo_Vale.svg/1200px-Logotipo_Vale.svg.png"
                                        width="250px"
                                        height="100px"
                                        id="image0"
                                    />
                                </items>
                            </FlexBox>

                            <Table
                                id="IDTabelaFuncionario"
                                growing="true"
                                growingThreshold="6"
                                items="{       path: '/Funcionario' ,    parameters: {    $count: true,             $$updateGroupId : 'peopleGroup'         }                                 }"
                                mode="SingleSelectLeft"
                                selectionChange=".onSelectionChange"
                            >
                                <headerToolbar>
                                    <OverflowToolbar
                                        id="_IDGenOverflowToolbar1"
                                    >
                                        <content>
                                            <ToolbarSpacer id="spacer0" />
                                            <SearchField
                                                id="searchField"
                                                width="20%"
                                                placeholder="{i18n>searchFieldPlaceholder}"
                                                enabled="{= !${appView>/hasUIChanges}}"
                                                search=".onSearch"
                                            />

                                            <Button
                                                id="addUserButton"
                                                icon="sap-icon://add"
                                                tooltip="{i18n>createButtonText}"
                                                press=".onCreate"
                                                class="myCustomButtonClass"
                                            >
                                                <layoutData>
                                                    <OverflowToolbarLayoutData
                                                        id="_IDGenOverflowToolbarLayoutData1"
                                                        priority="NeverOverflow"
                                                    />
                                                </layoutData>
                                            </Button>
                                            <Button
                                                id="deleteUserButton"
                                                icon="sap-icon://delete"
                                                tooltip="{i18n>deleteButtonText}"
                                                press=".onDelete"
                                            >
                                                <layoutData>
                                                    <OverflowToolbarLayoutData
                                                        id="_IDGenOverflowToolbarLayoutData2"
                                                        priority="NeverOverflow"
                                                    />
                                                </layoutData>
                                            </Button>

                                            <Button
                                                id="refreshUsersButton"
                                                icon="sap-icon://refresh"
                                                tooltip="{i18n>refreshButtonText}"
                                                press="onRefresh"
                                            />
                                            <Button
                                                id="sortUsersButton"
                                                icon="sap-icon://sort"
                                                enabled="{= !${appView>/hasUIChanges}}"
                                                tooltip="{i18n>sortButtonText}"
                                                press="onSort"
                                            />
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column id="IDColuna1">
                                        <Text
                                            id="IDColunaText1"
                                            text="ID"
                                        />
                                    </Column>
                                </columns>
                                <columns>
                                    <Column id="IDColuna2">
                                        <Text
                                            id="IDColunaText2"
                                            text="Nome"
                                        />
                                    </Column>
                                </columns>
                                <columns>
                                    <Column id="IDColuna3">
                                        <Text
                                            id="IDColunaText3"
                                            text="Genero"
                                        />
                                    </Column>
                                </columns>
                                <columns>
                                    <Column id="IDColuna4">
                                        <Text
                                            id="IDColunaText4"
                                            text="Estado"
                                        />
                                    </Column>
                                </columns>
                                <columns>
                                    <Column id="IDColuna5">
                                        <Text
                                            id="IDColunaText5"
                                            text="PaÃ­s"
                                        />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="_IDGenColumnListItem1">
                                        <cells>
                                            <Input
                                                id="_IDGenTextID"
                                                value="{ID}"
                                                valueLiveUpdate="true"
                                                liveChange=".onInputChange"
                                            />
                                        </cells>
                                        <cells>
                                            <Input
                                                id="_IDGenTextNome"
                                                value="{Nome}"
                                                valueLiveUpdate="true"
                                                liveChange=".onInputChange"
                                            />
                                        </cells>
                                        <cells>
                                            <ComboBox
                                                id="_IDGenComboBoxGenero"
                                                items="{ path: 'model>/genero' }"
                                                selectedKey="{Genero}"
                                            >
                                                <items>
                                                    <core:Item
                                                        id="_IDGenItem2"
                                                        key="{model>key}"
                                                        text="{model>text}"
                                                    />
                                                </items>
                                            </ComboBox>
                                        </cells>
                                        <cells>
                                            <Input
                                                id="_IDGenTextEstado"
                                                value="{Estado}"
                                                valueLiveUpdate="true"
                                                liveChange=".onInputChange"
                                            />
                                        </cells>
                                        <cells>
                                            <ComboBox
                                                id="_IDGenComboBox1"
                                                items="{ path: 'model>/countries' }"
                                                selectedKey="{Pais_code}"
                                            >
                                                <items>
                                                    <core:Item
                                                        id="_IDGenItem1"
                                                        key="{model>key}"
                                                        text="{model>text}"
                                                    />
                                                </items>
                                            </ComboBox>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                                <customData>
                                    <core:CustomData
                                        key="w5g.dt.editable"
                                        value="false"
                                        id="data14"
                                    />
                                </customData>
                            </Table>
                        </l:SplitPane>
                        <l:SplitPane id="_IDGenSplitPane1">
                            <!--Details-->
                            <!--remove busy-->
                            <semantic:SemanticPage
                                id="detailArea"
                                visible="true"
                            >
                                <semantic:titleHeading>
                                    <Title
                                        id="_IDGenTitle1"
                                        text="{Nome} + '(Sobrenome)'"
                                        level="H2"
                                    />
                                </semantic:titleHeading>
                                <semantic:headerContent>
                                    <FlexBox id="_IDGenFlexBox2">
                                        <VBox id="_IDGenVBox1">
                                            <ObjectAttribute
                                                id="_IDGenObjectAttribute1"
                                                text="{i18n>userNameLabelText}"
                                            />
                                            <ObjectAttribute
                                                id="_IDGenObjectAttribute2"
                                                text="{Nome}"
                                            />
                                        </VBox>
                                        <VBox
                                            id="_IDGenVBox2"
                                            class="sapUiMediumMarginBegin"
                                        >
                                            <ObjectAttribute
                                                id="_IDGenObjectAttribute3"
                                                text="{i18n>ageLabelText}"
                                            />
                                            <ObjectNumber
                                                id="_IDGenObjectNumber1"
                                                number="30"
                                                unit="Years"
                                            />
                                        </VBox>
                                    </FlexBox>
                                </semantic:headerContent>
                                <semantic:content>
                                    <VBox id="_IDGenVBox3">
                                        <FlexBox
                                            id="_IDGenFlexBox3"
                                            wrap="Wrap"
                                        >
                                            <f:Form
                                                id="_IDGenForm1"
                                                editable="false"
                                            >
                                                <f:title>
                                                    <core:Title
                                                        id="_IDGenTitle2"
                                                        text="{i18n>addressTitleText}"
                                                    />
                                                </f:title>
                                                <f:layout>
                                                    <f:ResponsiveGridLayout
                                                        id="_IDGenResponsiveGridLayout1"
                                                        labelSpanXL="3"
                                                        labelSpanL="3"
                                                        labelSpanM="3"
                                                        labelSpanS="12"
                                                        adjustLabelSpan="false"
                                                        emptySpanXL="4"
                                                        emptySpanL="4"
                                                        emptySpanM="4"
                                                        emptySpanS="0"
                                                        columnsXL="1"
                                                        columnsL="1"
                                                        columnsM="1"
                                                        singleContainerFullSize="false"
                                                    />
                                                </f:layout>
                                                <f:formContainers>
                                                    <f:FormContainer
                                                        id="_IDGenFormContainer1"
                                                    >
                                                        <f:formElements>
                                                            <f:FormElement
                                                                id="_IDGenFormElement1"
                                                                label="{i18n>addressLabelText}"
                                                            >
                                                                <f:fields>
                                                                    <Text
                                                                        id="_IDGenText1"
                                                                        text="{Nome}"
                                                                    />
                                                                </f:fields>
                                                            </f:FormElement>
                                                            <f:FormElement
                                                                id="_IDGenFormElement2"
                                                                label="{i18n>cityLabelText}"
                                                            >
                                                                <f:fields>
                                                                    <Text
                                                                        id="_IDGenText2"
                                                                        text="{Cidade}"
                                                                    />
                                                                </f:fields>
                                                            </f:FormElement>
                                                            <f:FormElement
                                                                id="_IDGenFormElement3"
                                                                label="{i18n>regionLabelText}"
                                                            >
                                                                <f:fields>
                                                                    <Text
                                                                        id="_IDGenText3"
                                                                        text="{Rua}"
                                                                    />
                                                                </f:fields>
                                                            </f:FormElement>
                                                            <f:FormElement
                                                                id="_IDGenFormElement4"
                                                                label="{i18n>countryLabelText}"
                                                            >
                                                                <f:fields>
                                                                    <Text
                                                                        id="_IDGenText4"
                                                                        text="{Pais}"
                                                                    />
                                                                </f:fields>
                                                            </f:FormElement>
                                                        </f:formElements>
                                                    </f:FormContainer>
                                                </f:formContainers>
                                            </f:Form>
                                        </FlexBox>
                                    </VBox>
                                </semantic:content>
                            </semantic:SemanticPage>
                        </l:SplitPane>
                    </l:PaneContainer>
                </l:ResponsiveSplitter>
            </content>
            <footer>
                <Toolbar
                    id="_IDGenToolbar1"
                    visible="{appView>/hasUIChanges}"
                >
                    <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                    <Button
                        id="saveButton"
                        type="Emphasized"
                        text="{i18n>saveButtonText}"
                        enabled="{= ${message>/}.length === 0 &amp;&amp; ${appView>/usernameEmpty} === false }"
                        press=".onSave"
                    />
                    <Button
                        id="doneButton"
                        text="{i18n>cancelButtonText}"
                        press=".onResetChanges"
                    />
                </Toolbar>
            </footer>
        </Page>
    </App>
</mvc:View>
