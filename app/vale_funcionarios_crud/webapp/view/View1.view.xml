<mvc:View
    controllerName="valefuncionarioscrud.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="_IDGenPage1"
        title="{i18n>title}"
    >
        <Table
            id="_IDGenTable1"
            growing="true"
            growingThreshold="5"
            items="{
		path: '/Funcionario',
								parameters: {
									$count: true,
                                    $$updateGroupId : 'peopleGroup'
								}
                                }">
                                
            <headerToolbar>
                <OverflowToolbar id="_IDGenOverflowToolbar1">
                    <content>
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <SearchField
                            id="searchField"
                            width="20%"
                            placeholder="{i18n>searchFieldPlaceholder}"
                            enabled="{= !${appView>/hasUIChanges}}"
                            search=".onSearch"
                        />

                        <Button
											id="addUserButton"
											icon="sap-icon://add"
											tooltip="{i18n>createButtonText}"
											press=".onCreate">
											<layoutData>
												<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData1" priority="NeverOverflow"/>
											</layoutData>
										</Button>


                        <Button
                            id="refreshUsersButton"
                            icon="sap-icon://refresh"
                            tooltip="{i18n>refreshButtonText}"
                            press=".onRefresh"
                        />
                        <Button
                            id="sortUsersButton"
                            icon="sap-icon://sort"
                            enabled="{= !${appView>/hasUIChanges}}"
                            tooltip="{i18n>sortButtonText}"
                            press="onSort"
                        />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column id="_IDGenColumn1">
                    <Text
                        id="_IDGenText1"
                        text="ID"
                    />
                </Column>
            </columns>
            <columns>
                <Column id="_IDGenColumn2">
                    <Text
                        id="_IDGenText2"
                        text="Nome"
                    />
                </Column>
            </columns>
            <columns>
                <Column id="_IDGenColumn3">
                    <Text
                        id="_IDGenText3"
                        text="Genero"
                    />
                </Column>
            </columns>
            <columns>
                <Column id="_IDGenColumn4">
                    <Text
                        id="_IDGenText4"
                        text="Estado"
                    />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1">
                    <cells>
                        <Input
                            id="_IDGenTextID"
                            value="{ID}"
                            valueLiveUpdate="true"
							liveChange=".onInputChange"
                           
                        />
                    </cells>
                    <cells>
                        <Input
                            id="_IDGenTextNome"
                            value="{Nome}"
                            valueLiveUpdate="true"
							liveChange=".onInputChange"
                        />
                    </cells>
                    <cells>
                        <Input
                            id="_IDGenTextGenero"
                            value="{Genero}"
                            valueLiveUpdate="true"
							liveChange=".onInputChange"
                        />
                    </cells>
                    <cells>
                        <Input
                            id="_IDGenTextEstado"
                            value="{Estado}"
                            valueLiveUpdate="true"
							liveChange=".onInputChange"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <footer>
						<Toolbar id="_IDGenToolbar1" visible="{appView>/hasUIChanges}">
							<ToolbarSpacer id="_IDGenToolbarSpacer2"/>
							<Button
								id="saveButton"
								type="Emphasized"
								text="{i18n>saveButtonText}"
								enabled="{= ${message>/}.length === 0 &amp;&amp; ${appView>/usernameEmpty} === false }"
								press=".onSave"/>
							<Button
								id="doneButton"
								text="{i18n>cancelButtonText}"
								press=".onResetChanges"/>
						</Toolbar>
					</footer>
    </Page>
</mvc:View>
